    <script>
        // Обработка формы контактов
        document.addEventListener('DOMContentLoaded', function() {
            const contactForm = document.getElementById('contactForm');
            if (contactForm) {
                contactForm.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    
                    const formData = {
                        name: this.querySelector('input[name="name"]').value,
                        phone: this.querySelector('input[name="phone"]').value,
                        email: this.querySelector('input[name="email"]').value,
                        comment: this.querySelector('textarea[name="message"]').value,
                        formType: 'contact'
                    };
                    
                    console.log('Отправляемые данные:', formData);
                    
                    try {
                        const response = await fetch('/submit-form', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(formData)
                        });
                        
                        if (response.ok) {
                            alert('Спасибо за обращение! Мы свяжемся с вами в ближайшее время.');
                            this.reset();
                        } else {
                            alert('Произошла ошибка при отправке формы. Попробуйте позже.');
                        }
                    } catch (error) {
                        console.error('Ошибка:', error);
                        alert('Не удалось отправить форму. Попробуйте позже.');
                    }
                });
            }
            
            // Обработка клика по изображениям схем для их увеличения
            const routeImages = document.querySelectorAll('.route-image-wrapper');
            routeImages.forEach(wrapper => {
                wrapper.addEventListener('click', function() {
                    const img = this.querySelector('img');
                    if (img) {
                        // Открываем изображение в новом окне для просмотра
                        window.open(img.src, '_blank');
                    }
                });
            });
        });
