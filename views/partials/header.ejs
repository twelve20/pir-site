            margin: 0 20px;
            border-radius: 6px;
            text-align: center;
            font-weight: 600;
            border-bottom: none !important;
        }

        .mobile-contact {
            padding: 20px;
            border-top: 1px solid #e5e5e5;
            background: white;
            display: flex;
            flex-direction: column;
            gap: 15px;
            align-items: center;
        }

        .mobile-cart {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #0070c0;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
            padding: 12px 24px;
            background: #f8f9fa;
            border-radius: 8px;
            width: 100%;
            max-width: 200px;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .mobile-cart:hover {
            background: #0070c0;
            color: white;
        }

        .mobile-tel {
            color: #0070c0;
            text-decoration: none;
            font-weight: 600;
            font-size: 16px;
        }

        .mobile-button {
            background: #0070c0;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            width: 100%;
            max-width: 200px;
        }

        /* Модальное окно */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 10000;
            align-items: center;
            justify-content: center;
        }

        .modal-overlay.show {
