<section id="cases" class="cases">
    <div class="container">
        <h2 class="section-title">Наши работы</h2>
        
        <!-- Swiper слайдер для наших работ -->
        <div class="swiper cases-swiper">
            <div class="swiper-wrapper">
                <% projects.forEach(project => { %>
                    <div class="swiper-slide">
                        <div class="case-card">
                            <div class="case-card__image">
                                <div class="case-card__badge">PIR</div>
                                <img src="<%= project.image %>" alt="<%= project.title %>" class="case-card__img">
                                <div class="case-card__overlay">
                                    <a href="<%= project.link %>" class="case-card__view">
                                        <i class="fas fa-eye"></i> Смотреть проект
                                    </a>
                                </div>
                            </div>
                            <div class="case-card__content">
                                <h3 class="case-card__title"><%= project.title %></h3>
                                <div class="case-card__stats">
                                    <div class="case-card__stat">
                                        <i class="fas fa-clock"></i>
                                        <span><%= project.description.split('.')[0] %></span>
                                    </div>
                                    <div class="case-card__stat">
                                        <i class="fas fa-layer-group"></i>
                                        <span><%= project.description.split('.')[1] %></span>
                                    </div>
                                </div>
                                <a href="<%= project.link %>" class="btn btn--blue case-card__btn">Подробнее</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <!-- Добавляем навигацию для слайдера -->
            <div class="swiper-pagination cases-pagination"></div>
            <div class="swiper-button-next cases-button-next"></div>
            <div class="swiper-button-prev cases-button-prev"></div>
        </div>
    </div>

    <!-- Стили для улучшенного блока Наши работы -->
    <style>
        .cases {
            padding: 4rem 0;
            background-color: #f8f9fa;
        }
        
        .cases-swiper {
            padding: 20px 40px;
            margin: 0 auto;
        }
        
        .case-card {
            background-color: #fff;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            height: 100%;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        
        .case-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }
        
        .case-card__image {
            position: relative;
            overflow: hidden;
            height: 250px;
        }
        
        .case-card__badge {
            position: absolute;
            top: 15px;
            left: 15px;
            background-color: #FF6B35;
            color: white;
            padding: 5px 12px;
            border-radius: 30px;
            font-size: 0.8rem;
            font-weight: bold;
            z-index: 10;
            box-shadow: 0 3px 10px rgba(255, 107, 53, 0.3);
        }
        
        .case-card__img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
        
        .case-card:hover .case-card__img {
            transform: scale(1.1);
        }
        
        .case-card__overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(42, 92, 170, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .case-card:hover .case-card__overlay {
            opacity: 1;
        }
        
        .case-card__view {
            background-color: white;
            color: #2A5CAA;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            text-decoration: none;
            transform: translateY(20px);
            transition: transform 0.3s ease;
        }
        
        .case-card:hover .case-card__view {
            transform: translateY(0);
        }
        
        .case-card__content {
            padding: 1.5rem;
        }
        
        .case-card__title {
            font-family: 'Roboto Bold', sans-serif;
            font-size: 1.3rem;
            color: #2A5CAA;
            margin-bottom: 1rem;
        }
        
        .case-card__stats {
            display: flex;
            flex-direction: column;
            gap: 0.8rem;
            margin-bottom: 1.5rem;
        }
        
        .case-card__stat {
            display: flex;
            align-items: center;
        }
        
        .case-card__stat i {
            color: #FF6B35;
            margin-right: 0.5rem;
            font-size: 1rem;
        }
        
        .case-card__stat span {
            color: #555;
            font-size: 0.95rem;
        }
        
        .case-card__btn {
            width: 100%;
            padding: 10px;
            text-align: center;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }
        
        .case-card__btn:hover {
            background-color: #FF6B35;
            transform: translateY(-3px);
        }
        
        /* Стили для навигации слайдера */
        .cases-button-next,
        .cases-button-prev {
            color: #2A5CAA !important;
        }
        
        .cases-button-next:after,
        .cases-button-prev:after {
            font-size: 1.5rem !important;
        }
        
        .cases-pagination .swiper-pagination-bullet-active {
            background-color: #2A5CAA;
        }
        
        @media (max-width: 768px) {
            .case-card__image {
                height: 200px;
            }
            
            .case-card__title {
                font-size: 1.2rem;
            }
            
            .case-card__content {
                padding: 1.2rem;
            }
        }
    </style>
</section>