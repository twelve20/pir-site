<section class="similar-products">
    <h2 class="section-title">Похожие товары</h2>
    <div class="similar-grid">
        <% products.forEach(product => { %>
            <div class="similar-card">
                <a href="/product/<%= product.id %>" class="similar-link">
                    <div class="similar-image">
                        <img src="<%= product.image %>" alt="<%= product.title %>" loading="lazy">
                        <% if (product.isPromo) { %>
                            <div class="promo-badge">Акция</div>
                        <% } %>
                    </div>

                    <div class="similar-content">
                        <h3 class="similar-title"><%= product.title %></h3>

                        <div class="similar-price">
                            <% if (product.isPromo && product.oldPrice) { %>
                                <span class="old-price-small"><%= product.oldPriceFormatted %></span>
                                <span class="current-price-small"><%= product.priceFormatted %></span>
                            <% } else { %>
                                <span class="current-price-small"><%= product.priceFormatted %></span>
                            <% } %>
                        </div>

                        <button class="btn-view-details">
                            Подробнее
                            <i class="fas fa-arrow-right"></i>
                        </button>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>
</section>

<style>
    .similar-products {
        margin-top: 80px;
        padding-top: 60px;
        border-top: 2px solid #e0e0e0;
    }

    .similar-products .section-title {
        font-family: 'Roboto Bold', sans-serif;
        font-size: 32px;
        font-weight: 700;
        color: #2A5CAA;
        margin-bottom: 40px;
        text-align: center;
    }

    .similar-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 30px;
    }

    .similar-card {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: 1px solid #e0e0e0;
    }

    .similar-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        border-color: #2A5CAA;
    }

    .similar-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .similar-image {
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .similar-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .similar-card:hover .similar-image img {
        transform: scale(1.05);
    }

    .similar-image .promo-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        background: linear-gradient(135deg, #FF6B35 0%, #E65C2B 100%);
        color: white;
        padding: 5px 10px;
        border-radius: 15px;
        font-size: 11px;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(255, 107, 53, 0.3);
    }

    .similar-content {
        padding: 20px;
    }

    .similar-title {
        font-family: 'Roboto Bold', sans-serif;
        font-size: 16px;
        font-weight: 600;
        color: #2A5CAA;
        margin-bottom: 12px;
        min-height: 40px;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        transition: color 0.3s ease;
    }

    .similar-card:hover .similar-title {
        color: #FF6B35;
    }

    .similar-price {
        margin-bottom: 15px;
    }

    .old-price-small {
        font-size: 14px;
        text-decoration: line-through;
        color: #999;
        display: block;
        margin-bottom: 4px;
    }

    .current-price-small {
        font-family: 'Roboto Bold', sans-serif;
        font-size: 18px;
        font-weight: 700;
        color: #FF6B35;
    }

    .btn-view-details {
        width: 100%;
        background: linear-gradient(135deg, #2A5CAA 0%, #1A4C8A 100%);
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        box-shadow: 0 2px 8px rgba(42, 92, 170, 0.3);
    }

    .btn-view-details:hover {
        background: linear-gradient(135deg, #FF6B35 0%, #E65C2B 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 107, 53, 0.4);
    }

    .btn-view-details i {
        transition: transform 0.3s ease;
    }

    .btn-view-details:hover i {
        transform: translateX(3px);
    }

    @media (max-width: 768px) {
        .similar-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .similar-products {
            margin-top: 60px;
            padding-top: 40px;
        }

        .similar-products .section-title {
            font-size: 24px;
            margin-bottom: 30px;
        }
    }
</style>
