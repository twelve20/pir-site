<script>
    document.addEventListener('DOMContentLoaded', function() {
        const calculateBtn = document.getElementById('calculate-savings');
        if (calculateBtn) {
            calculateBtn.addEventListener('click', function() {
                const houseType = document.getElementById('house-type').value;
                const squareMeters = parseInt(document.getElementById('square-meters').value);
                const region = document.getElementById('region').value;
                
                // Простая логика расчета
                let baseRate = 300; // базовая ставка за м²
                
                if (region === 'north') baseRate *= 1.5;
                if (region === 'south') baseRate *= 0.8;
                
                if (houseType === 'sauna') baseRate *= 2;
                if (houseType === 'commercial') baseRate *= 1.3;
                
                const yearlySavings = Math.round(squareMeters * baseRate);
                const paybackPeriod = yearlySavings > 20000 ? '2-3 года' : '3-4 года';
                const heatLossReduction = squareMeters > 100 ? 'до 45%' : 'до 35%';
                
                document.getElementById('yearly-savings').textContent = `${yearlySavings.toLocaleString()} ₽`;
                document.getElementById('payback-period').textContent = paybackPeriod;
                document.getElementById('heat-loss-reduction').textContent = heatLossReduction;
            });
        }
    });
</script>
