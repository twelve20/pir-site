<section id="projects-grid" class="projects-grid">
    <div class="container">
        <div class="projects-grid__list">
            <% projects.forEach((project, index) => { %>
                <div class="project-card" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                    <div class="project-card__image-wrapper">
                        <img src="<%= project.image %>" alt="<%= project.title %>" class="project-card__image">
                        <div class="project-card__overlay">
                            <div class="project-card__badge">
                                <i class="fas fa-home"></i>
                                <span>Проект <%= index + 1 %></span>
                            </div>
                        </div>
                    </div>
                    <div class="project-card__content">
                        <h3 class="project-card__title">
                            <%= project.title %>
                        </h3>
                        <p class="project-card__description">
                            <%= project.description %>
                        </p>
                        <div class="project-card__features">
                            <div class="feature-item">
                                <i class="fas fa-fire"></i>
                                <span>Огнестойкость</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-snowflake"></i>
                                <span>Теплоизоляция</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-shield-alt"></i>
                                <span>Долговечность</span>
                            </div>
                        </div>
                        <div class="project-card__cta">
                            <button class="project-card__btn" onclick="openBuyModal()">
                                <span>Заказать такой же</span>
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<style>
    .projects-grid {
        padding: 80px 0;
        background: white;
    }
    
    .projects-grid__list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 40px;
    }
    
    .project-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(0, 0, 0, 0.05);
        position: relative;
    }
    
    .project-card:hover {
        transform: translateY(-12px);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        border-color: rgba(0, 112, 192, 0.2);
    }
    
    .project-card__image-wrapper {
        position: relative;
        height: 280px;
        overflow: hidden;
        background: #f8f9fa;
    }
    
    .project-card__image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.5s ease;
    }
    
    .project-card:hover .project-card__image {
        transform: scale(1.08);
        filter: brightness(1.1);
    }
    
    .project-card__overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            180deg, 
            rgba(0, 0, 0, 0.2) 0%, 
            transparent 30%, 
            transparent 70%, 
            rgba(0, 0, 0, 0.6) 100%
        );
        display: flex;
        align-items: flex-start;
        justify-content: flex-end;
        padding: 24px;
    }
    
    .project-card__badge {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        color: #0070c0;
        padding: 12px 20px;
        border-radius: 25px;
        font-size: 13px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }
    
    .project-card__badge i {
        font-size: 12px;
    }
    
    .project-card__content {
        padding: 32px;
        display: flex;
        flex-direction: column;
        height: calc(100% - 280px);
    }
    
    .project-card__title {
        font-size: 24px;
        font-weight: 700;
        color: #1a1a1a;
        line-height: 1.3;
        margin-bottom: 16px;
        transition: color 0.3s ease;
    }
    
    .project-card:hover .project-card__title {
        color: #0070c0;
    }
    
    .project-card__description {
        color: #666;
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 24px;
        flex-grow: 1;
    }
    
    .project-card__features {
        display: flex;
        gap: 16px;
        margin-bottom: 24px;
        flex-wrap: wrap;
    }
    
    .feature-item {
        display: flex;
        align-items: center;
        gap: 6px;
        background: linear-gradient(135deg, rgba(0, 112, 192, 0.08) 0%, rgba(255, 107, 53, 0.08) 100%);
        color: #0070c0;
        padding: 8px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        border: 1px solid rgba(0, 112, 192, 0.15);
        transition: all 0.3s ease;
    }
    
    .feature-item:hover {
        background: linear-gradient(135deg, #0070c0 0%, #ff6b35 100%);
        color: white;
        border-color: transparent;
        transform: translateY(-2px);
    }
    
    .feature-item i {
        font-size: 10px;
    }
    
    .project-card__cta {
        margin-top: auto;
    }
    
    .project-card__btn {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: linear-gradient(135deg, rgba(0, 112, 192, 0.05) 0%, rgba(255, 107, 53, 0.05) 100%);
        color: #0070c0;
        border: 2px solid rgba(0, 112, 192, 0.15);
        padding: 16px 24px;
        border-radius: 15px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .project-card__btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #0070c0 0%, #ff6b35 100%);
        transition: left 0.3s ease;
        z-index: 1;
    }
    
    .project-card__btn span,
    .project-card__btn i {
        position: relative;
        z-index: 2;
        transition: all 0.3s ease;
    }
    
    .project-card__btn:hover::before {
        left: 0;
    }
    
    .project-card__btn:hover {
        color: white;
        border-color: transparent;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 112, 192, 0.3);
    }
    
    .project-card__btn:hover i {
        transform: translateX(5px);
    }
    
    @media (max-width: 1024px) {
        .projects-grid__list {
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 30px;
        }
        
        .project-card__content {
            padding: 28px;
        }
        
        .project-card__title {
            font-size: 22px;
        }
        
        .project-card__description {
            font-size: 15px;
        }
    }
    
    @media (max-width: 768px) {
        .projects-grid {
            padding: 60px 0;
        }
        
        .projects-grid__list {
            grid-template-columns: 1fr;
            gap: 25px;
            padding: 0 20px;
        }
        
        .project-card__image-wrapper {
            height: 240px;
        }
        
        .project-card__content {
            padding: 24px;
        }
        
        .project-card__title {
            font-size: 20px;
        }
        
        .project-card__description {
            font-size: 14px;
        }
        
        .project-card__features {
            gap: 12px;
        }
        
        .feature-item {
            font-size: 11px;
            padding: 6px 12px;
        }
        
        .project-card__btn {
            padding: 14px 20px;
            font-size: 15px;
        }
    }
</style>
