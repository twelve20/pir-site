        margin-right: auto;
    }
    
    .catalog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 30px;
        margin-bottom: 80px;
    }
    
    .product-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        border: 1px solid #e0e0e0;
    }
    
    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0,0,0,0.15);
        border-color: #0070c0;
    }
    
    .product-image {
        height: 200px;
        overflow: hidden;
        position: relative;
    }
    
    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .product-card:hover .product-image img {
        transform: scale(1.05);
    }
    
    .promo-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: #e30613;
        color: white;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
    }
    
    .product-content {
        padding: 25px;
    }
    
    .product-title {
        font-size: 18px;
        font-weight: 600;
        color: #333;
        margin-bottom: 12px;
        min-height: 44px;
        line-height: 1.3;
    }
    
    .product-description {
        font-size: 14px;
        color: #666;
        line-height: 1.5;
        margin-bottom: 20px;
        min-height: 42px;
    }
    
    .product-features {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 25px;
    }
    
    .feature {
        background: #f0f8ff;
        color: #0070c0;
        padding: 4px 8px;
        border-radius: 12px;
