        padding: 80px 0;
        background-color: #f8f9fa;
    }
    
    .section-title {
        font-size: 36px;
        font-weight: 700;
        color: #333;
        text-align: center;
        margin-bottom: 16px;
        position: relative;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -12px;
        left: 50%;
        transform: translateX(-50%);
