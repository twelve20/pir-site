        font-size: 14px;
        text-decoration: line-through;
        color: #999;
        margin-bottom: 4px;
    }
    
    .product-actions {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }
    
    .btn-details, .btn-order {
        border: none;
        cursor: pointer;
        font-size: 13px;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 6px;
        transition: all 0.3s ease;
        text-align: center;
        min-width: 100px;
    }
    
    .btn-details {
        background: #f8f9fa;
        color: #666;
        border: 1px solid #e0e0e0;
    }
    
    .btn-order {
        background: #0070c0;
        color: white;
    }
    
    .btn-details:hover {
        background: #e9ecef;
        color: #0070c0;
        border-color: #0070c0;
    }
    
    .btn-order:hover {
        background: #005a9e;
        transform: translateY(-1px);
        box-shadow: 0 3px 10px rgba(0,112,192,0.3);
    }
    
    .catalog-cta {
        text-align: center;
        background: white;
        padding: 50px 40px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        border: 1px solid #e0e0e0;
    }
    
    .catalog-cta h3 {
