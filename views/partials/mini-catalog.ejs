<script>
    // Hover эффект смены изображений для товаров Технониколь
    document.addEventListener('DOMContentLoaded', function() {
        const hoverImages = document.querySelectorAll('.product-main-image[data-hover]');

        hoverImages.forEach(img => {
            const originalSrc = img.src;
            const hoverSrc = img.dataset.hover;
            const parentCard = img.closest('.product-card');

            if (parentCard && hoverSrc) {
                parentCard.addEventListener('mouseenter', () => {
                    img.src = hoverSrc;
                });

                parentCard.addEventListener('mouseleave', () => {
                    img.src = originalSrc;
                });
            }
        });
    });

    // Функция открытия модального окна заказа
    function openOrderModal(productId, productTitle) {
        // Создаем модальное окно если его еще нет
        let modal = document.getElementById('orderModal');
        if (!modal) {
            modal = document.createElement('div');
            modal.id = 'orderModal';
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-box" onclick="event.stopPropagation()">
                    <button class="modal-close" onclick="closeOrderModal()">×</button>
                    <h3 class="modal-title">Оформление заказа</h3>
                    <p class="modal-text">Товар: <strong id="orderProductTitle"></strong></p>
                    <form class="modal-form" id="orderForm">
                        <input type="text" name="name" placeholder="Ваше имя" required class="modal-input">
                        <input type="tel" name="phone" placeholder="Телефон" required class="modal-input">
                        <textarea name="comment" placeholder="Комментарий к заказу (необязательно)" class="modal-input" rows="3"></textarea>
                        <label class="consent-label">
                            <input type="checkbox" required class="consent-checkbox">
                            <span>Я согласен с <a href="/privacy-policy" target="_blank">Политикой конфиденциальности</a> и <a href="/terms-of-use" target="_blank">Пользовательским соглашением</a></span>
                        </label>
                        <button type="submit" class="modal-submit">Оформить заказ</button>
                    </form>
                </div>
            `;
            document.body.appendChild(modal);

            // Обработчик отправки формы
            document.getElementById('orderForm').addEventListener('submit', async function(e) {
                e.preventDefault();

                const formData = {
                    name: this.name.value,
                    phone: this.phone.value,
                    comment: this.comment.value,
                    productTitle: document.getElementById('orderProductTitle').textContent
                };

                try {
                    const response = await fetch('/submit-order-form', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (response.ok) {
                        alert('Спасибо за заказ! Мы свяжемся с вами в ближайшее время.');
                        closeOrderModal();
                        this.reset();
                    } else {
                        alert(result.message || 'Ошибка при отправке заказа. Попробуйте позже.');
                    }
                } catch (error) {
                    console.error('Ошибка:', error);
                    alert('Не удалось отправить заказ. Попробуйте позже.');
                }
            });

            // Закрытие по клику на оверлей
            modal.addEventListener('click', closeOrderModal);
        }

        // Устанавливаем название товара
        document.getElementById('orderProductTitle').textContent = productTitle;

        // Показываем модальное окно
        modal.classList.add('show');
    }

    function closeOrderModal() {
        const modal = document.getElementById('orderModal');
        if (modal) {
            modal.classList.remove('show');
        }
    }
</script>
