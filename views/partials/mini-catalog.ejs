<section id="mini-catalog" class="mini-catalog">
    <div class="container">
        <h2 class="section-title">Каталог PIR-плит</h2>
        <p class="section-subtitle">Выберите оптимальные материалы для вашего проекта</p>
        
        <div class="catalog-grid">
            <% regularProducts.forEach((product, index) => { %>
                <div class="product-card">
                    <div class="product-image">
                        <img src="<%= product.image %>" alt="<%= product.title %>" loading="lazy">
                        <% if (product.isPromo) { %>
                            <div class="promo-badge">Акция</div>
                        <% } %>
                    </div>
                    
                    <div class="product-content">
                        <h3 class="product-title"><%= product.title %></h3>
                        <p class="product-description"><%= product.description %></p>
                        
                        <div class="product-features">
                            <div class="feature">Влагостойкость</div>
                            <div class="feature">Высокая прочность</div>
                            <div class="feature">Долговечность</div>
                        </div>
                        
                        <div class="product-footer">
                            <div class="price-section">
                                <% if (product.isPromo) { %>
                                    <span class="old-price"><%= product.oldPrice %></span>
                                    <span class="current-price"><%= product.price %></span>
                                <% } else { %>
                                    <span class="current-price"><%= product.price %></span>
                                <% } %>
                            </div>
                            
                            <div class="product-actions">
                                <button class="btn-details" onclick="openDetailsModal('<%= product.id %>')">
                                    Подробнее
                                </button>
                                <button class="btn-order" onclick="openOrderModal()">
                                    Заказать
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <div class="catalog-cta">
            <h3>Нужна помощь в выборе?</h3>
            <p>Наши специалисты помогут подобрать оптимальное решение для вашего проекта</p>
            <button class="cta-button" onclick="openCallModal()">
                Получить консультацию
            </button>
        </div>
    </div>
</section>

<!-- Модальное окно заказа -->
<div id="orderModal" class="modal">
    <div class="modal-content">
        <span class="modal-close" onclick="closeOrderModal()">&times;</span>
        <h2>Заказать материал</h2>
        <form class="order-form">
            <input type="text" placeholder="Ваше имя" required>
            <input type="tel" placeholder="Телефон" required>
            <input type="email" placeholder="Email">
            <textarea placeholder="Комментарий к заказу"></textarea>
            <button type="submit">Отправить заказ</button>
        </form>
    </div>
</div>

<style>
