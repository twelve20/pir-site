<section id="mini-catalog" class="mini-catalog">
    <div class="container">
        <h2 class="section-title">Каталог PIR-плит</h2>
        <p class="section-subtitle">Выберите оптимальные материалы для вашего проекта</p>

        <!-- PIR плиты Технониколь -->
        <% if (technonicolProducts && technonicolProducts.length > 0) { %>
        <div class="category-section" data-category="technonicol">
            <h3 class="category-title">PIR плиты Технониколь</h3>
            <div class="catalog-grid">
                <% technonicolProducts.forEach((product, index) => { %>
                    <div class="product-card" itemscope itemtype="https://schema.org/Product">
                        <!-- Schema.org Product микроразметка для Яндекса и Google -->
                        <meta itemprop="name" content="<%= product.title %>">
                        <meta itemprop="description" content="<%= product.description %>">
                        <link itemprop="image" href="https://pir-planet.ru<%= product.image %>">
                        <meta itemprop="sku" content="<%= product.id %>">

                        <div itemprop="brand" itemscope itemtype="https://schema.org/Brand">
                            <meta itemprop="name" content="LOGICPIR Технониколь">
                        </div>

                        <div itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                            <meta itemprop="price" content="<%= typeof product.price === 'number' ? product.price : product.price.replace(/[^\d]/g, '') %>">
                            <meta itemprop="priceCurrency" content="RUB">
                            <link itemprop="availability" href="<%= product.inStock ? 'https://schema.org/InStock' : 'https://schema.org/OutOfStock' %>">
                            <link itemprop="url" href="https://pir-planet.ru/#<%= product.id %>">
                        </div>

                        <div class="product-image product-image-hover">
                            <img src="<%= product.image %>"
                                 alt="<%= product.title %>"
                                 loading="lazy"
                                 class="product-main-image"
                                 <% if (product.hoverImage) { %>
                                 data-hover="<%= product.hoverImage %>"
                                 <% } %>>
                            <% if (product.isPromo) { %>
                                <div class="promo-badge">Акция</div>
                            <% } %>
                            <div class="technonicol-badge">Технониколь</div>
                        </div>

                        <div class="product-content">
                            <h3 class="product-title"><%= product.title %></h3>
                            <p class="product-description"><%= product.description %></p>

                            <div class="product-features">
                                <div class="feature">Класс Г1</div>
                                <div class="feature">L-кромка</div>
                                <div class="feature">До +120°C</div>
                            </div>

                            <div class="product-footer">
                                <div class="price-section">
                                    <% if (product.isPromo && product.oldPrice) { %>
                                        <span class="old-price"><%= typeof product.oldPrice === 'number' ? product.oldPrice + ' руб./шт.' : product.oldPrice %></span>
                                        <span class="current-price"><%= typeof product.price === 'number' ? product.price + ' руб./шт.' : product.price %></span>
                                    <% } else { %>
                                        <span class="current-price"><%= typeof product.price === 'number' ? product.price + ' руб./шт.' : product.price %></span>
                                    <% } %>
                                </div>

                                <div class="product-actions">
                                    <a href="/product/<%= product.id %>" class="btn-details">
                                        Подробнее
                                    </a>
                                    <button class="btn-order" onclick="openOrderModal('<%= product.id %>', '<%= product.title %>')" data-product-id="<%= product.id %>">
                                        <i class="fas fa-phone-alt"></i>
                                        Заказать
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
        <% } %>

        <!-- PIR плиты PirroGroup -->
