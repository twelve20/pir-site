            }
            
            .unified-hero__title {
                font-size: 1.8rem;
                line-height: 1.3;
            }
            
            .unified-hero__subtitle {
                font-size: 1rem;
            }
            
            .unified-benefit {
                width: 100%;
                padding: 15px;
                margin-bottom: 10px;
            }
            
            .unified-benefits {
                flex-direction: column;
            }
            
            .unified-step-content {
                flex: 1;
                padding-right: 10px;
            }
            
            .unified-layout {
                flex-direction: column;
            }
            
            .unified-main {
                width: 100%;
                padding: 15px;
            }
            
            .unified-sidebar {
                width: 100%;
                padding: 15px;
            }
        }
    </style>
